<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/gallery_fragment_horizontal_margin"
    android:layout_marginLeft="@dimen/gallery_fragment_horizontal_margin"
    android:layout_marginTop="@dimen/gallery_fragment_vertical_margin"
    android:layout_marginBottom="@dimen/gallery_fragment_vertical_margin">

    <ImageView
        android:id="@+id/imgRowPhoto"
        android:layout_width="@dimen/photo_list_image_size"
        android:layout_height="@dimen/photo_list_image_size"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>